
// -------------------- EXERCICE 1 --------------------
// 2.1

// Sur LAB_I
interface Serial0/0/1
ip address 10.0.100.1 255.255.255.0
clock rate 56000
no shutdown

// Sur ISPB-OSPF-BGP100
hostname ISPB-OSPF-BGP100
interface Serial0/1/0
ip address 10.0.100.2 255.255.255.0
no shutdown

interface GigabitEthernet0/1
ip address 10.0.200.1 255.255.255.0
no shutdown
ex
interface GigabitEthernet0/0
ip address 20.0.100.1 255.255.255.0
no shutdown

// 2.2 routage OSPF

// Sur LAB_I
router ospf 1
network 10.0.200.1 0.0.0.255 area 0
network 20.0.100.1 0.0.0.255 area 0
end


